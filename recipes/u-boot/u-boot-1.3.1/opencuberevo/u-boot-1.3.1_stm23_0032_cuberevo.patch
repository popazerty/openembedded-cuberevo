+	 * get header.
+	 */
+	if( (data_size=receive_header())<0 )
+	{
+		dprintf( "header error.\n" );
+		ret = -1;
+		goto terminate;
+	}
+
+	/*
+	 * get body...
+	 */
+	for( a=0; a<(data_size+1023)/1024; a++ )
+	{
+		if( receive_body( a, data_size ) )
+		{
+			dprintf( "body error.\n" );
+			ret = -1;
+			goto terminate;
+		}
