+int front_singlekey( int timeout )
+{
+	unsigned long long end;
+	int key, oldkey = key_null;
+
+	end = get_ticks() + timeout*get_tbclk();
+
+	while( 1 )
+	{
+		if( timeout && get_ticks() > end )
+			return key_null;
+
+		key = front_getkey();
+		if( key == key_null )
+			continue;
+
+		if( oldkey != key_null && ( key == key_release || key == key_front_release ) )
+			return oldkey;
+
+		oldkey = key;
+	}
+}
