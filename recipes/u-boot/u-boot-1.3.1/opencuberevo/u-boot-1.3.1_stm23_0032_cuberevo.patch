+		cfg[9] |= ChromaDelayAux[(chroma_delay-STDENC_MIN_CHROMA_DELAY)/STDENC_STEP_CHROMA_DELAY_V10_MORE];
+#endif
+	}
+
+	if(denc_ver >= 6)
+	{
+		cfg[7] &= ~DENC_CFG7_SECAM;
