+#define DENC_CFG4_SYOUT_P2     0x20 /* delay = +2 ckref                      */
+#define DENC_CFG4_SYOUT_P3     0x30 /* delay = +3 ckref                      */
+#define DENC_CFG4_ALINE        0x08 /* Video active line duration control    */
