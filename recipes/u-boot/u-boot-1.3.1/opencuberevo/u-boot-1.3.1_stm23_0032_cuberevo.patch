+			cfg[0] |= DENC_CFG0_PAL_BDGHI;
+			cfg[1] |= DENC_CFG1_FLT_19;
+			cfg[3] |= DENC_CFG3_PAL_TRFLT;
+			if( denc_ver >= 12 )
