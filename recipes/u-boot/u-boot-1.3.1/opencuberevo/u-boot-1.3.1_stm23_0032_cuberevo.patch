+					dfs[1] = IDFS1(Idfs[NTSCM_443_SQ]);
+					dfs[2] = IDFS0(Idfs[NTSCM_443_SQ]);
+				}
+			}
+			break;
+		case STDENC_MODE_PALN:
+			cfg[0] |= DENC_CFG0_PAL_N;
+			cfg[1] |= DENC_CFG1_FLT_16;
+			cfg[3] |= DENC_CFG3_PAL_TRFLT;
+
+			if(denc_ver>=12)
+			{
+				cfg[10] |= DENC_CFG10_AUX_FLT_16;
+				if(square_pixel)
