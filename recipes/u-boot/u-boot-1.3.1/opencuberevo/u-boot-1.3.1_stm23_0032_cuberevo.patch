+
+	// mode  eeprom 
+	if(mode<0 || mode>N_TVMODE-1)
+		mode = 0;
+	sprintf(buf, "%d",mode);
+	add_item(db_key_tvmode, buf);
+
+	front_puts("BOOTING");
+
+	return 0;
+}
