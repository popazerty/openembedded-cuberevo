+		front_putchar( a, ' ' );
+	for( ; *s && pos<front_seg_num; pos++, s++ )
+		front_putchar( pos, *s );
+	for( ; pos<front_seg_num; pos++ )
+		front_putchar( pos, ' ' );
+
+	packet[0] = MICOM_REQ_WR_VFDUPDATE;
+	packet[1] = 0x00;
+	packet[2] = 0x00;
+	packet[3] = 0x00;
+	packet[4] = 0x00;
