+#define DENC_CFG4_TXT_LAT_2    0x00 /* teletext data latency 2=2+0           */
+#define DENC_CFG4_TXT_LAT_3    0x01 /* teletext data latency 3=2+1           */
+#define DENC_CFG4_TXT_LAT_4    0x02 /* teletext data latency 4=2+2           */
