+	else
+	{
+		printf("%s : unsupported video format.\n",__FUNCTION__);
+		return -1;		
+	}
+
+	/*   autotest mode */
+	//printf("DENC H/W ID : 0x%08X", p2_inl(DENC_HWID));
+	//printf("DENC H/W ID : 0x%08X", p2_inl(0xb920c1ac));
+	//cfg |= 0x38;
