+
+#ifdef CONFIG_DGS_FRONT
+	front_puts( "USB UPGRADE" );
+
+	/*
+	 * wait power key release...
+	 */
+	{
+		unsigned long long starttime;
+		int key;
+
+		starttime = get_ticks();
+
+		while( get_ticks() < (starttime+3*get_tbclk()) )
+		{
+			if( front_tstc() )
+			{
+				key = front_getkey();
+				if( key == key_release || key == key_front_release )
+					break;
+				starttime = get_ticks();
+			}
+		}
+	}
