+		front_persent( a, (data_size+1023)/1024 );
+	}
+
+	/*
+	 * burn image to flash.
+	 */
+	ret = burn_flash();
+
+terminate:
+	serial_putc( 0x70 );
+	serial_putc( 0x70 );
+	serial_putc( 0x70 );
+
+	return ret;
