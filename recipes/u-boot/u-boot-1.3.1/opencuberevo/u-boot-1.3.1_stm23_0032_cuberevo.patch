+
+	__serial_putc( crc >> 24 & 0xff );
+	__serial_putc( crc >> 16 & 0xff );
+	__serial_putc( crc >>  8 & 0xff );
+	__serial_putc( crc >>  0 & 0xff );
+
+	return 0;
