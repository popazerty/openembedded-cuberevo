+int front_waitkey( int *keys, int timeout )
+{
+	unsigned long long end;
+	int key;
+	int a;
+
+	end = get_ticks() + timeout*get_tbclk();
+
+	while( 1 )
+	{
+		if( timeout && get_ticks() > end )
+			break;
+
+		key = front_getkey();
+		if( key == key_null )
+			continue;
+
+		for( a=0; keys[a]!=key_null; a++ )
+		{
+			if( key == keys[a] )
+			{
+				while( 1 )
+				{
+					if( key == key_release || key == key_front_release )
+						return keys[a];
+					key = front_getkey();
+				}
+			}
+		}
+	}
+
+	return -1;
+}
