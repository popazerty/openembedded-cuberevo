+
+#define DENC_CFG0               (DENC_BASE+0x00)            /* Configuration 0 */
+#define DENC_CFG1               (DENC_BASE+0x04)            /* Configuration 1 */
+#define DENC_CFG2               (DENC_BASE+0x08)            /* Configuration 2 */
